<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/one_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/back_selector"
    android:orientation="vertical"
    tools:context="com.itobuz.android.easybmicalculator.OneFragment">

    <ImageView
        android:id="@+id/logo1img"
        android:layout_width="@dimen/img_dimen_lg"
        android:layout_height="@dimen/img_dimen_lg"
        android:src="@drawable/ic_bmi_icon"
        android:contentDescription="@string/image_desc"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_one_title"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/app_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/slide_one_subhead"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:id="@+id/app_subname"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="sans-serif" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_text"
        android:textAlignment="center"
        android:textSize="18sp"
        android:id="@+id/app_start_text"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_marginTop="130dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/white_54" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_text2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:id="@+id/app_start_text2"
        android:textAllCaps="true"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/white_54" />

</LinearLayout>
